<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Stylists</title>
    </head>
    <body>
    <h1>Hair Salon</h1>

    <form action="/create_stylist" method="post">
        <label for="name">Name:</label>
        <input type="text" name="name">
        <button type="submit">Add New Stylist</button>
    </form>

    {% if stylists is not empty %}
        <hr>
        <h3>Stylists:</h3>

        <ul>
            {% for stylist in stylists %}
                <hr>
                <li><a href="/clients/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
                <li><a href="/stylists/{{ stylist.getId }}/update">Edit</a></li>
                <li><a href="/stylists/{{ stylist.getId }}/delete">Delete</a></li>
                <hr>
            {% endfor %}
        </ul>
    {% endif %}
    </body>
</html>
